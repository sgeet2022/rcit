							+jpg('group-03-360x326').post-corporate-thumbnail-image

						
				.col-lg-4.offset-top-96
					.row.row-30.row-md-50.row-xxl-80
						.col-md-6.col-lg-12
							article.box-8.mt-30.mt-xl-60.wow.fadeIn(data-wow-delay='.1s')
								ul.list-pricing
									li: a(href='english-for-business.html')
