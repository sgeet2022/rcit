	- var pageName = 'Home'

block page
	// Page Header
	header.section.page-header.page-header-2.section-custom-1-ally
		+navbar-creative

		// Jumbotron 3
		.jumbotron-3
			+parallax-element({
				img: 'bg-image-01.jpg'
			}).jumbotron-3-inner.context-dark
				.container
					.row
						.col-md-8.col-lg-7.col-xl-7
							.unit.jumbotron-3-title.wow.fadeIn
