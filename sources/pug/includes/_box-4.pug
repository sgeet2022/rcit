.box-4-outer
	button.box-4-toggle(data-multitoggle='#box-4' data-scope='.box-4-outer' aria-label='Filter Toggle')
		span Search
		span.icon.mdi.mdi-magnify
	article#box-4.box-4: .box-4-inner
		h3 Sign up for a class
		// RD Mailform
		form.rd-form.rd-mailform.form-lg(
		data-form-output='form-output-global'
		data-form-type='contact'
		method='post'
		action='bat/rd-mailform.php'
		)
			.form-wrap.form-wrap-icon
				label.form-label.form-label-outside(for='contact-2-name') Full Name
				input#contact-2-name.form-input(type='text' name='name' data-constraints='@Required')
				.icon.form-icon.mdi.mdi-border-color
			.form-wrap.form-wrap-icon
				label.form-label.form-label-outside(for='contact-2-date') Date
				input#contact-2-date.form-input(type='text' name='date' data-constraints='@Required' data-time-picker='date')
				.icon.form-icon.mdi.mdi-calendar-text
			.form-wrap.form-wrap-icon
				label.form-label.form-label-outside(for='contact-2-email') E-mail
				input#contact-2-email.form-input(type='email' name='email' data-constraints='@Email @Required' )
				.icon.form-icon.mdi.mdi-email-outline
			.form-wrap.form-wrap-icon.wow.fadeIn(data-wow-delay='.1s')
				label.form-label.form-label-outside(for='contact-2-phone') Phone
				input#contact-2-phone.form-input(type='text' name='phone' data-constraints='@PhoneNumber')
				.icon.form-icon.mdi.mdi-phone
			.form-wrap.mt-xl-55
				button.button.button-lg.button-primary.button-block(type='submit') send request
